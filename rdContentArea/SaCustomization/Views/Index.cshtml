@{
    Layout = null;
}

@using Newtonsoft.Json

@model rdContentArea.SaCustomization.SaContentAreaViewModel
@{
    var json = new Dictionary<string, string>() { { "oldContent", Html.DisplayFor(p => p.OldContentArea).ToHtmlString() }, { "newContent", Html.DisplayFor(p => p.NewContentArea).ToHtmlString() } };
}

@Html.Raw(HttpUtility.JavaScriptStringEncode(JsonConvert.SerializeObject(json), addDoubleQuotes: true))